        <TextView
            android:id="@+id/tvVis"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/visual"
            android:textColor="@color/negro"
            android:textSize="20dp" />
        <CheckBox
            android:id="@+id/chbVS"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="180dp"/>
        <TextView
            android:id="@+id/tvInt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/internet"
            android:textColor="@color/negro"
            android:textSize="20dp" />
        <CheckBox
            android:id="@+id/chbInter"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="150dp"
            android:layout_marginTop="-30dp"
            android:layout_marginRight="180dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/salon"
            android:textColor="@color/negro"
            android:textSize="20dp"/>
        <Spinner
            android:id="@+id/spSalon"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="104dp"></Spinner>
        <TextView
            android:id="@+id/tvOb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:text="@string/observaciones"
            android:textColor="@color/negro"
            android:textSize="20dp" />
        <EditText
            android:id="@+id/etOb"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="160dp"
            android:layout_marginTop="-35dp"
            android:layout_marginRight="1dp"
            android:hint="  observaciones"
            android:inputType="text" />

        <Button
            android:id="@+id/bComple"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:background="@color/negro"
            android:paddingLeft="30dp"
            android:paddingRight="30dp"
            android:text="Completar"
            android:textColor="@color/plata"
            android:textSize="20dp" />
    </LinearLayout>

    </ScrollView>

</LinearLayout>